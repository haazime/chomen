<% @page.chunks.each.with_index(1) do |chunk, n| -%>
  <%= render partial: 'chunks/chunk', locals: { chunk: chunk, n: n } %>
<% end -%>
<div>
  <%= link_to '#', data: { chunk_adder: true, chunk_count: @page.chunks.size },
      class: 'ui right floated basic mini circular icon button' do %>
    <i class="plus icon"></i>
  <% end -%>
</div>
