<% if pages.any? -%>
  <% pages.each do |p| -%>
    <li class="recent-page">
      <%= link_to edit_page_url(gpid: p.gpid) do %>
        <%= p.label %>
      <% end -%>
    </li>
  <% end -%>
  <li class="divider"></li>
  <li>
    <%= link_to list_page_url do %>
      <%= fa_icon('globe') %> Show all pages
    <% end -%>
  </li>
<% else -%>
  <li>
    <%= link_to new_page_url do %>
      <%= fa_icon('flag-o') %> No any pages.
    <% end -%>
  </li>
<% end -%>
