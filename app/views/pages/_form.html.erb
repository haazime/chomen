<% form_action = page.persisted? ? page_url(gpid: page.gpid) : pages_url %>
<% form_method = page.persisted? ? :put : :post %>
<%= form_for page, url: form_action, method: form_method, html: { class: 'ui form' } do |f| %>
  <div class="ui field">
    <%= f.text_area :content, rows: 22, class: 'content' %>
  </div>
  <%= f.submit 'Save', class: 'ui button' %>
<% end -%>
