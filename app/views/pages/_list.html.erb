<% if pages.empty? -%>
  <p>No pages</p>
<% else -%>
  <div class="list-group">
    <% pages.each do |p| -%>
      <%= link_to edit_page_url(gpid: p.gpid), class: 'list-group-item' do -%>
        <h4 class="list-group-item-heading"><%= p.label %></h4>
        <p class="list-group-item-text"><%=l p.updated_at, format: :short %></p>
      <% end -%>
    <% end -%>
  </div>
<% end -%>
